@model List<string>
@{
    ViewData["Title"] = "History";
}
<img class="background-image-home" src="~/images/LoginRegisterBg.jpg" asp-append-version="true"
     width:"100%" height:"100%" />

    <div class="card history-card" style="width: 18rem;">
        <div class="card-header">
            <h3>Last Five Zodiac Searches:</h3>
        </div>
  <div class="card-body">
            @if (Model.Count == 0)
            {
                <h1>Sorry, you haven't searched for any zodiac yet</h1>
            }
            else{
      <ol>
            @foreach (var zodiacWord in Model)
            {
                <li><a asp-controller="horoscope" asp-action="DetailsByZodiac" 
                    asp-route-zodiac="@zodiacWord" asp-route-day="today"> @zodiacWord</a></li>
            }
            </ol>
            }
  </div>
</div>

