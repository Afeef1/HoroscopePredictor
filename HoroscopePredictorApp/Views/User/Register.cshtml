@model RegisterViewModel

@{
    ViewBag.Title = "User Registration";
}
<img class="background-image-home" src="~/images/LoginRegisterBg.jpg" asp-append-version="true"
     width:"100%" height:"100%" />
@if (ViewBag.HasLoginFailed != null && ViewBag.HasLoginFailed)
{
    <div class="alert alert-danger d-flex aligns-items-center justify-content-center w-50 mx-auto mt-5">

        <h6>@ViewBag.LoginErrorMessage</h6>


    </div>
}
<div class="card text-center card-styling d-flex aligns-items-center justify-content-center w-50 mx-auto mt-5 register-card">
    <form method="post">
        <div class="card-header">
            <h3>User Registration</h3>
        </div>
        <div class="card-body">
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" placeholder="ABC">
                <label asp-for="Name">Name</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="name@example.com">
                <label asp-for="Email">Email address</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" placeholder="Password">
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>



        </div>
        <div class="card-footer d-grid">
            <button type="submit" class="btn btn-primary">Register</button>
            <br />
            <br />
            <div class="text-secondary"> * Already a User? <a asp-action="login" asp-controller="user">Login Here</a></div>
        </div>
    </form>
</div>

